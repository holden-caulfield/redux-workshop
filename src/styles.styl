gray = #d0d0d0
orange = #F47A20
red = #fc435d
green = #00be8f
yellow = #faff76
blue = rgb(0, 120, 190)

bg-color(arguments)
  background arguments
  &:hover
    background darken(arguments, 25%)

body
  background blue
  font-family Helvetica, Arial, sans-serif

button, input
  font-family Helvetica, Arial, sans-serif
  font-size 15px
  border none
  border-radius 5px
  padding 5px 10px
  margin 0 5px
  cursor pointer
  text-decoration none

input
  text-align left
  box-shadow: 2px 2px 0px 0px #999;
  height 20px

button
  font-weight bold
  color white
  height 30px
  text-align center

code
  background #CCC
  font-weight bold
  margin 3%
  padding 2%
  width 90%
  display block

.kanbanBoard
  margin auto
  text-align center
  width 90%
  h1
    color white
    text-shadow: 2px 2px black;

.taskList
  width 31%
  margin 1.1%
  float left
  border-radius 15px
  background gray

.taskCard
  margin 10px
  padding 10px
  border-radius 5px
  background white
  box-shadow: 2px 2px 0px 0px #999
  position relative

  button.close
    position absolute
    top 5px
    left 5px
    bg-color(#F40020)
    font-size 12px
    height 20px
    width 20px
    line-height 20px
    vertical-align middle
    padding 0

.addTaskForm
  margin 10px
  input
    width 50%
  button
    bg-color(orange)

.buttonBar
  button
    width: 90px
    margin-top 10px
    &.forward
      bg-color(green)
    &.backwards
      bg-color(red)

.taskStats
  color white
  clear both
  font-size 20px
  margin-top 20px
  text-align center
  .statsGraph
    margin 0
    padding 0
    margin-bottom 5px
    list-style-type none
    li
      display inline-block
      height 25px
      &.backlog
        background red
      &.working
        background yellow
      &.done
        background green
      &:first-child
        border-radius 5px 0 0 5px
      &:last-child
        border-radius 0 5px 5px 0
      &:only-child
        border-radius 5px

.helpPanel
  position absolute
  background white
  transition left 1s
  width 300px
  opacity .95
  top 0
  left 0
  bottom 0
  .contents
    padding-left 10px
    height 100%
    overflow auto
    h1
      margin-top 35px
  a
    cursor pointer
  &.hidden
    left -300px
    a.show
      transition opacity 1s 1s
  &.shown
    a.show
      opacity 0
  a.show
    position absolute
    right -60px
    color white
    top 10px
  a.hide
    position absolute
    width 98%
    height 50px
    background linear-gradient(white, white, rgba(255,255,255,0))
    padding 1%
